# Configuration eth1
# RAPPEL: eth0 est à vagrant, ne pas y toucher
eth1:
  network.managed:
    - enabled: True
    - type: eth
    - proto: none
    - ipaddr: 172.16.2.131
    - netmask: 255.255.255.240
    - gateway: 10.0.2.2
    - dns:
      - 139.124.5.132
      - 139.124.5.131

